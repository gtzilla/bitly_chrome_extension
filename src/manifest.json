{
  "name": "bit.ly | a simple URL shortener",
  "version": "1.2.0.12",
  "options_page": "options.html",
  "description": "Shorten and Share, right from your browser, instantly",
  "background_page": "background.html",
  "browser_action": {
    "default_title": "bit.ly",  
    "default_icon": "bitly.png"
  },
  "icons" : { 
    "16" : "s/graphics/bitly_fish_16.png",
    "48" : "s/graphics/bitly_fish_48.png",
    "128" : "s/graphics/bitly_fish_128.png"    
  },
  "permissions": [
    "http://*/*", 
    "https://*/*", 
    "tabs", 
    "notifications",
    "unlimited_storage"
  ],
  "content_scripts": [
    {
     "matches": ["http://*/*", "https://*/*"],
     "js": ["js/content_plugins/bitly.dispatcher.js"]   
    }
  ]
}
